                               style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtIsbn" promptText="978-X-XXX-XXXXX-X"
                                   GridPane.columnIndex="1" GridPane.rowIndex="0"
                                   prefWidth="300"/>

                        <!-- Titre -->
                        <Label text="Titre *" GridPane.columnIndex="0" GridPane.rowIndex="1"
                               style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtTitre" promptText="Titre du livre"
                                   GridPane.columnIndex="1" GridPane.rowIndex="1"/>

                        <!-- Auteur -->
                        <Label text="Auteur *" GridPane.columnIndex="0" GridPane.rowIndex="2"
                               style="-fx-font-weight: bold;"/>
                        <ComboBox fx:id="comboAuteur" promptText="SÃ©lectionner un auteur"
                                  GridPane.columnIndex="1" GridPane.rowIndex="2"
                                  prefWidth="300"/>

                        <!-- CatÃ©gorie -->
                        <Label text="CatÃ©gorie *" GridPane.columnIndex="0" GridPane.rowIndex="3"
