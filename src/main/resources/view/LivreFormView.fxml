                <VBox spacing="15">
                    <Label text="ðŸ’° TYPE ET PRIX" styleClass="section-title"/>

                    <HBox spacing="20" alignment="CENTER_LEFT">
                        <Label text="Type de livre *" style="-fx-font-weight: bold;"/>
                        <RadioButton text="Gratuit" fx:id="radioGratuit" selected="true">
                            <toggleGroup>
                                <ToggleGroup fx:id="groupeType"/>
                            </toggleGroup>
                        </RadioButton>
                        <RadioButton text="Payant" fx:id="radioPayant" toggleGroup="$groupeType"/>
                    </HBox>

                    <HBox spacing="10" alignment="CENTER_LEFT" fx:id="boxPrix" visible="false">
                        <Label text="Prix (DH) *" style="-fx-font-weight: bold;"/>
                        <TextField fx:id="txtPrix" promptText="0.00" prefWidth="150"/>
                        <Label text="DH"/>
                    </HBox>
                </VBox>

                <Separator/>

                <!-- DisponibilitÃ© -->
                <HBox spacing="15" alignment="CENTER_LEFT">
