<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane xmlns="http://javafx.com/javafx/17" xmlns:fx="http://javafx.com/fxml/1" 
            fx:controller="controller.ChatController" 
            styleClass="chat-container"
            prefWidth="800" prefHeight="600">
    
    <!-- En-tÃªte -->
    <top>
        <VBox styleClass="chat-header">
            <HBox alignment="CENTER_LEFT" spacing="10">
                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                <Label text="ðŸ¤– DeepSeek AI Assistant" styleClass="chat-title"/>
            </HBox>
            <Separator/>
        </VBox>
    </top>
    
    <!-- Zone de messages -->
    <center>
        <ScrollPane fx:id="chatScrollPane" fitToWidth="true" 
                    styleClass="chat-scroll-pane" 
                    hbarPolicy="NEVER" vbarPolicy="ALWAYS">
            <VBox fx:id="chatMessagesContainer" spacing="5" 
                  styleClass="chat-messages-container">
                <padding><Insets top="10" right="10" bottom="10" left="10"/></padding>
            </VBox>
        </ScrollPane>
    </center>
    
    <!-- Zone de saisie -->
    <bottom>
        <VBox styleClass="chat-input-container">
            <Separator/>
            <HBox spacing="10" alignment="CENTER_LEFT">
                <padding><Insets top="15" right="15" bottom="15" left="15"/></padding>
                <TextField fx:id="messageInput" 
                          promptText="Tapez votre message..." 
                          styleClass="message-input"
                          HBox.hgrow="ALWAYS"/>
                <Button fx:id="sendButton" 
                       text="Envoyer" 
                       onAction="#handleEnvoyerMessage"
                       styleClass="send-button"
                       defaultButton="true"/>
            </HBox>
        </VBox>
    </bottom>
    
</BorderPane>
